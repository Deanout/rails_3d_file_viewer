<%= form_with(model: displayable) do |form| %>
  <% if displayable.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(displayable.errors.count, "error") %> prohibited this displayable from being saved:</h2>
      <ul>
        <% displayable.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :color, style: "display: block" %>
    <%= form.text_field :color %>
  </div>
  <div>
    <%= form.label :flatshading, style: "display: block" %>
    <%= form.check_box :flatshading %>
  </div>
  <div>
    <%= form.label :file, style: "display: block" %>
    <%= form.file_field :file %>
  </div>
  <div>
    <%= form.label :material, style: "display: block" %>
    <%= form.file_field :material %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
